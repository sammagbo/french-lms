# Application
PORT=3000
NODE_ENV=development

# Database (PostgreSQL)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
# Docker Internal Host is usually the service name (postgres) but for running app locally use localhost
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/french_lms?schema=public"

# Database defaults for Docker Compose (Optional, matching default values in docker-compose.yml)
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=french_lms
DB_PORT=5432

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Authentication (JWT)
JWT_SECRET="super-secret-key-change-me"
JWT_EXPIRATION="1d"

# PGAdmin (Docker only)
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050
